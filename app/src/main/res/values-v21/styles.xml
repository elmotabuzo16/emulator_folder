<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:disabledAlpha">1.0</item>
        <item name="android:textColor">@color/login_button_text_color</item>
    </style>

    <style name="Toolbar" parent="BaseToolbar">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="ToolbarNoElevation" parent="BaseToolbar">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.VitalityActive.TabLayout" parent="Widget.VitalityActive.Base.TabLayout">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/waterBlue</item>
        <item name="android:progressBackgroundTint">@color/waterBlue_54</item>
    </style>

    <style name="LoadingIndicator">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="LinkButton">
        <item name="android:colorButtonNormal">@color/waterBlue</item>
        <item name="android:background">@color/waterBlue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinkButtonInverted">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/waterBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinkButtonInvertedRed" parent="LinkButtonInverted">
        <item name="android:textColor">@color/crimson_red</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="LinkButtonInvertedGreen" parent="LinkButtonInverted">
        <item name="android:textColor">@color/jungle_green</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">96dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>
</resources>
