<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vitalityactive.va.membershippass.MembershipPassFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/memberpass_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/carrier_branding_area_no_color"/>

        <android.support.v7.widget.CardView
            android:id="@+id/digital_pass_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/memberpass_header"
            android:layout_marginBottom="@dimen/activity_horizontal_margin">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/membership_pass_header_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:text="@string/Settings.membership_digital_pass_section_heading_970"
                    android:textAppearance="@style/MaterialLightTitleH2"
                    android:textColor="@android:color/black" />

                <FrameLayout
                    android:id="@+id/profile_image_container"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin">

                    <TextView
                        android:id="@+id/profile_image_initials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_with_stroke"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="34sp"
                        tools:text="S" />

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/navigation_drawer_profile_image_content_description"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:id="@+id/membership_pass_editBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.04"
                    android:textColor="@color/vitalityOrange"
                    android:textSize="14sp"
                    android:text="@string/profile_edit_title"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/qr_code_view"
                    android:layout_width="143dp"
                    android:layout_height="143dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:src="@drawable/qr_code" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/button_bar_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/Settings.membership_digital_pass_footnote_989"
                    android:textColor="@color/light_disabled_38"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/membership_details_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/digital_pass_cardview">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical">
                <TextView
                    style="@style/MaterialLightTitleH2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_membership_details_title"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/vitality_number_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/vitality_number"
                                style="@style/MaterialLightSubhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1234567"/>

                            <TextView
                                style="@style/MaterialLightBody1Secondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Settings.membership_vitality_number_title_966"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/info_btnView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/infofilled_24"
                            android:layout_marginEnd="@dimen/profile_icon_column_spacing"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/button_bar_gray"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/membership_number_container"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/membership_number"
                                    style="@style/MaterialLightSubhead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1234567"/>

                                <TextView
                                    android:id="@+id/membership_number_label"
                                    style="@style/MaterialLightBody1Secondary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/profile_field_membership_number_title_1125"/>
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/info_btnView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/infofilled_24"
                                android:tint="?attr/colorPrimary"
                                android:layout_marginEnd="@dimen/profile_icon_column_spacing"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/button_bar_gray"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/customer_number_container"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/customer_number"
                                    style="@style/MaterialLightSubhead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1234567"/>

                                <TextView
                                    style="@style/MaterialLightBody1Secondary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Settings.membership_more_information_973"/>
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/info_btnView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/infofilled_24"
                                android:tint="?attr/colorPrimary"
                                android:layout_marginEnd="@dimen/profile_icon_column_spacing"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/button_bar_gray"
                                android:layout_alignParentBottom="true"/>
                        </RelativeLayout>



                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/vitality_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialLightSubhead"
                                android:text="Bronze"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialLightBody1Secondary"
                                android:text="@string/Settings.membership_vitality_status_title_967"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/button_bar_gray"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/membership_start_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialLightSubhead"
                                android:text="12 September 2014"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialLightBody1Secondary"
                                android:text="@string/Settings.membership_start_date_title_968"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/button_bar_gray"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/membership_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialLightSubhead"
                                android:text="@string/profile_membership_active_status_description_1126"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/MaterialLightBody1Secondary"
                                android:text="@string/Settings.membership_status_969"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/button_bar_gray"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </android.support.v7.widget.LinearLayoutCompat>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/help_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_below="@+id/membership_details_cardview"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</ScrollView>
