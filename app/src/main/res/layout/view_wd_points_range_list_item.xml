<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/wd_points_range_padding_medium"
    android:paddingStart="@dimen/wd_points_range_padding_medium"
    android:paddingTop="@dimen/wd_points_range_padding_medium">

    <TextView
        android:id="@+id/tv_points_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MaterialLightHeadlineH1" />

    <LinearLayout
        android:id="@+id/ll_range_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/wd_points_range_padding_extra_small"
        android:layout_marginTop="@dimen/wd_points_range_padding_medium"
        android:paddingRight="@dimen/wd_points_range_padding_medium"
        android:paddingEnd="@dimen/wd_points_range_padding_medium"
        android:orientation="vertical">
    </LinearLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_divider_12" />
</LinearLayout>