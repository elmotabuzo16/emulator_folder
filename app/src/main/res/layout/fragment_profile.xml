<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context="com.vitalityactive.va.profile.ProfileFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_horizontal_margin"
            tools:context="com.vitalityactive.va.profile.ProfileFragment">

            <FrameLayout
                android:id="@+id/profile_image_container"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/profile_image_initials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_with_stroke"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="34sp"
                    tools:text="S" />

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/navigation_drawer_profile_image_content_description"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:textAppearance="@style/MaterialLightHeadline"
                tools:text="Sam Cooper" />

            <Button
                android:id="@+id/personal_details_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="@string/Settings.profile_landing_personal_details_title_912" />
`
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/button_bar_gray" />

            <GridLayout
                android:id="@+id/profile_sub_item_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:rowCount="2">

                <LinearLayout
                    android:id="@+id/membership_pass_listitem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/profile_link_padding_top_bottom"
                    android:paddingTop="@dimen/profile_link_padding_top_bottom">

                    <ImageView
                        android:id="@+id/membership_pass_icon"
                        android:layout_width="@dimen/profile_icon_size"
                        android:layout_height="@dimen/profile_icon_size"
                        android:layout_marginEnd="@dimen/profile_icon_column_spacing"
                        android:src="@drawable/icon_membership_pass"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/MaterialLightSubhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_weight="1"
                        android:text="@string/Settings.membership_pass_911" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/events_feed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/profile_link_padding_top_bottom"
                    android:paddingTop="@dimen/profile_link_padding_top_bottom">

                    <ImageView
                        android:id="@+id/events_feed_icon"
                        android:layout_width="@dimen/profile_icon_size"
                        android:layout_height="@dimen/profile_icon_size"
                        android:layout_marginEnd="@dimen/profile_icon_column_spacing"
                        android:src="@drawable/icon_events_feed"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/MaterialLightSubhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_weight="1"
                        android:text="@string/Settings.landing_events_title_900" />

                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>