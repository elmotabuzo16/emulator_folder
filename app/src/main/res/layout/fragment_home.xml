<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.HomeActivity">

    <LinearLayout
        android:id="@+id/home_fragment_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--app:cardElevation="@dimen/home_screen_score_elevation"></android.support.v7.widget.CardView>-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/home_screen_score_elevation">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/home_status_header_logo"
                    android:layout_width="129dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    tools:ignore="ContentDescription"
                    tools:layout_height="40dp"
                    tools:layout_width="81dp"
                    tools:src="@drawable/login_vitality_logo" />

                <RelativeLayout
                    android:id="@+id/home_status_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:onClick="handleHomeStatusTapped"
                    android:paddingBottom="@dimen/ar_padding_small"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <include layout="@layout/horizontal_rule" />

                    <ImageView
                        android:id="@+id/home_status_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/status_badge_bronze_small" />

                    <TextView
                        android:id="@+id/home_status_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/home_status_icon"
                        android:textAppearance="@style/MaterialLightSubheadH3"
                        tools:text="Bronze" />

                    <ProgressBar
                        android:id="@+id/home_status_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_below="@+id/home_status_text"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/home_status_icon"
                        android:progress="10"
                        android:progressDrawable="@drawable/curved_progress_bar" />

                    <TextView
                        android:id="@+id/home_status_points_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/home_status_progress_bar"
                        android:layout_marginEnd="@dimen/activity_vertical_margin"
                        android:layout_marginStart="@dimen/activity_vertical_margin"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/home_status_icon"
                        android:textAppearance="@style/MaterialLightCaption"
                        tools:text="10 000 points to reach silver" />
                </RelativeLayout>
            </FrameLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </LinearLayout>

    <include
        android:id="@+id/loading_indicator"
        layout="@layout/loading_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@+id/home_fragment_retry"
        layout="@layout/empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>
