<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vitalityactive.va.settings.SettingChangePasswordFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:rowCount="4">

            <ImageView
                android:layout_width="@dimen/profile_icon_size"
                android:layout_height="@dimen/profile_icon_size"
                android:layout_column="0"
                android:layout_marginEnd="@dimen/profile_icon_column_spacing"
                android:layout_row="0"
                android:tint="?attr/colorPrimary"
                android:src="@drawable/settings_security"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/MaterialLightSubhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textStyle="bold|normal"/>

        </GridLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
