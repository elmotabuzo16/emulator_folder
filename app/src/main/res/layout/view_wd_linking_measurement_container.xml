<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/light_divider_12" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="@dimen/card_horizontal_margin_medium"
            android:layout_marginLeft="@dimen/card_horizontal_margin_medium"
            android:layout_marginRight="@dimen/card_horizontal_margin_medium"
            android:layout_marginStart="@dimen/card_horizontal_margin_medium"
            android:layout_marginTop="24dp"
            android:text="@string/WDA.landing.available_link_section_title_426"
            android:textAppearance="@style/MaterialLightTitleH2" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginBottom="@dimen/card_vertical_margin_medium"
            android:layout_marginEnd="@dimen/card_horizontal_margin_medium"
            android:layout_marginLeft="@dimen/card_horizontal_margin_medium"
            android:layout_marginRight="@dimen/card_horizontal_margin_medium"
            android:layout_marginStart="@dimen/card_horizontal_margin_medium"
            android:orientation="vertical"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
