<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="40dp"
    android:paddingStart="40dp"
    android:paddingTop="24dp">

    <ImageView
        android:id="@+id/register_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/login_email_icon_content_description"
        android:paddingBottom="12dp"
        android:paddingEnd="16dp"
        android:paddingStart="0dp"
        android:paddingTop="12dp"
        tools:src="@drawable/email_inactive" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/field_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/register_item_icon"
        app:passwordToggleContentDescription="@string/password_visibility_toggle_content_description"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/field"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawablePadding="16dp"
            android:textSize="@dimen/onboarding_subtitle_text_size" />

        <TextView
            android:id="@+id/field_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/registration.password_field_footnote_29"
            android:textAppearance="@style/MaterialLightBody1Disabled"
            android:textSize="12sp"
            tools:visibility="visible"
            android:visibility="gone" />

    </android.support.design.widget.TextInputLayout>
</RelativeLayout>
