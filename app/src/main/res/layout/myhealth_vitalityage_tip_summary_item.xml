<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="0dp"
    app:cardCornerRadius="@dimen/feedback_tips_summary_card_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:id="@+id/content_layout">

        <View
            android:id="@+id/item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/myhealth_tips_list_item_divider"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/myhealth_tips_feeback_content_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/myhealth_tips_feeback_content_vertical_margin"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/myhealth_vitalityage_profile_item1"
                style="@style/MaterialLightBody1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/myhealth_vitalityage_profile_item2"
                style="@style/MaterialLightSubheadH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/myhealth_vitalityage_profile_item1"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/myhealth_vitalityage_profile_feedback_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/myhealth_vitalityage_profile_item2"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/myhealth_vitalityage_tip_bad_result"
                android:textSize="@dimen/myhealth_vitality_age_tip_item3"
                android:textStyle="normal" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>