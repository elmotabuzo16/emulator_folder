<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reward_selection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin_small"
    android:paddingBottom="@dimen/activity_vertical_margin_small"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/reward_partner_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_small"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/AR.rewards.partner_logo_content_description_761"
        android:src="@drawable/cineworld_vue_80_x_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reward_selection_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/MaterialLightSubhead"
        app:layout_constraintBottom_toTopOf="@+id/reward_selection_description"
        app:layout_constraintEnd_toStartOf="@+id/reward_selection_check"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/reward_partner_logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cinema name" />

    <TextView
        android:id="@+id/reward_selection_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_small"
        android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:textAppearance="@style/MaterialLightTitleH2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reward_selection_check"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/reward_partner_logo"
        app:layout_constraintTop_toBottomOf="@id/reward_selection_name"
        tools:text="Ticket description" />

    <RadioButton
        android:id="@+id/reward_selection_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
