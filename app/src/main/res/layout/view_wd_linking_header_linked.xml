<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_spacing"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_wd_linking_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="@string/WDA.device_detail.last_synced_header_456"
            android:textAlignment="center"
            android:textAppearance="@style/MaterialLightTitleH2" />

        <TextView
            android:id="@+id/tv_wd_linking_synced_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_wd_linking_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/last_sync_date_top_margin"
            android:textAlignment="center"
            android:textAppearance="@style/MaterialLightSubhead"
            tools:text="Today, 10:15" />

        <Button
            android:id="@+id/btn_wd_link_now"
            style="@style/LinkButtonInverted"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@id/tv_wd_linking_synced_at"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:onClick="onHavingTroublesClicked"
            android:text="@string/having_trouble_button_text_461"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_wd_delink"
            style="@style/LinkButtonInvertedRed"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@id/btn_wd_link_now"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:onClick="onDelinkClicked"
            android:text="@string/WDA.device_detail.delink_button_text_462" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
