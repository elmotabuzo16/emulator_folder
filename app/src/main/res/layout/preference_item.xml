<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_with_switch_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/preference_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/userpreferences_item_icon_content_description"
        tools:src="@drawable/icn_crashreports" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/preference_item_icon"
        android:layout_toLeftOf="@+id/preference_item_switch"
        android:layout_toRightOf="@+id/preference_item_icon"
        android:layout_toStartOf="@+id/preference_item_switch"
        android:layout_marginStart="@dimen/user_preference_large_margin"
        android:layout_marginLeft="@dimen/user_preference_large_margin"
        android:layout_marginEnd="@dimen/user_preference_medium_margin"
        android:layout_marginRight="@dimen/user_preference_medium_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preference_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/preference_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textSize="@dimen/user_preference_item_description_text_size" />

        <Button
            android:id="@+id/manage_in_settings_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="handleManageInSettingsButtonTapped"
            android:text="@string/user_prefs.manage_in_settings_button_title_91"
            android:visibility="gone" />

    </LinearLayout>

    <Switch
        android:id="@+id/preference_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:visibility="invisible" />
</RelativeLayout>