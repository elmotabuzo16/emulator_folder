<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/root_coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="com.vitalityactive.va.membershippass.VitalityNumberActivity">

                <include layout="@layout/toolbar" />

                 <TextView
                     android:id="@+id/membership_pass_info_content"
                     android:text="@string/profile_field_vitality_number_information"
                     style="@style/MaterialLightBody1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_margin="@dimen/activity_horizontal_margin"/>
            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>

</layout>