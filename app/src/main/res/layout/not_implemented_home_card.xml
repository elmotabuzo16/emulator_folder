<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_card_height"
    card_view:cardCornerRadius="@dimen/home_card_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/rewards_home_card_center_title_margin"
            android:text="@string/card_type_not_implemented_yet"
            android:textAppearance="@style/MaterialLightTitleH2"
            android:textColor="@android:color/holo_red_light" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
