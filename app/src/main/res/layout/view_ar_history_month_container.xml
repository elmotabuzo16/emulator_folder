<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ar_padding_regular"
        android:layout_marginEnd="@dimen/card_horizontal_margin_medium"
        android:layout_marginLeft="@dimen/card_horizontal_margin_medium"
        android:layout_marginRight="@dimen/card_horizontal_margin_medium"
        android:layout_marginStart="@dimen/card_horizontal_margin_medium"
        android:layout_marginTop="@dimen/ar_padding_regular"
        android:textAppearance="@style/MaterialLightBody2SectionHeaders" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/ar_padding_regular"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

</RelativeLayout>
