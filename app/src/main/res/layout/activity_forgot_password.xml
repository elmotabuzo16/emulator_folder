<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forgot_password_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/forgot_password_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/forgot_password.instruction_message_54"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot_password_description"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/forgot_password_email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/login_email_icon_content_description"
                android:paddingBottom="12dp"
                android:paddingEnd="16dp"
                android:paddingStart="0dp"
                android:paddingTop="12dp"
                android:src="@drawable/email_inactive" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/forgot_password_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/forgot_password_email_icon">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/forgot_password_email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/registration.email_field_title_26"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/onboarding_subtitle_text_size" />

            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/agree_button_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/loginBackgroundDisabled"
            android:orientation="horizontal">

            <Button
                android:id="@+id/forgot_password_next_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:onClick="handleForwardButtonTapped"
                android:text="@string/next_button_title_84" />
        </FrameLayout>

    </RelativeLayout>

</LinearLayout>
