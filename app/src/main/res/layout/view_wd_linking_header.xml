<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_spacing"
    card_view:cardCornerRadius="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_horizontal_margin_medium"
        android:paddingBottom="@dimen/card_vertical_margin_huge"
        android:paddingTop="@dimen/card_vertical_margin_huge">

        <TextView
            android:id="@+id/tv_wd_linking_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WDA.device_detail.earn_message_433"
            android:textAlignment="center"
            android:paddingTop="@dimen/card_vertical_small"
            android:textAppearance="@style/MaterialLightBody1"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btn_wd_link_now"
            style="@style/LinkButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/card_title_subtitle_spacing"
            android:text="@string/link_now_button_text_434"
            android:onClick="onLinkNowClicked"
            card_view:layout_constraintLeft_toLeftOf="@+id/btn_wd_steps_to_link"
            card_view:layout_constraintRight_toRightOf="@+id/btn_wd_steps_to_link"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_wd_linking_header" />

        <Button
            android:id="@+id/btn_wd_steps_to_link"
            style="@style/LinkButtonInverted"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:text="@string/steps_to_link_button_text_471"
            android:onClick="onStepsToLinkClicked"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/btn_wd_link_now" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
