<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/lm_item_row_spacing">

    <ImageView
        android:id="@+id/help_item_icon"
        android:layout_width="@dimen/profile_icon_size"
        android:layout_height="@dimen/profile_icon_size"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:tint="?attr/colorPrimary"
        android:src="@drawable/health_tips_24" />

    <TextView
        android:id="@+id/helpSuggestions"
        style="@style/MaterialLightSubhead"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:text="How do I use my digital pass?" />

</LinearLayout>