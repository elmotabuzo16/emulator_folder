<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/card_vertical_margin_big"
        android:paddingTop="@dimen/card_vertical_margin_huge">

        <ImageView
            android:id="@+id/iv_wd_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/card_horizontal_margin_medium"
            android:layout_marginStart="@dimen/card_horizontal_margin_medium" />

        <TextView
            android:id="@+id/tv_wd_points_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/card_horizontal_margin_medium"
            android:layout_marginLeft="@dimen/card_horizontal_margin_medium"
            android:layout_marginRight="@dimen/card_horizontal_margin_medium"
            android:layout_marginStart="@dimen/card_horizontal_margin_medium"
            android:layout_marginBottom="1dp"
            android:text="@string/potential_points.header_title_476"
            android:textAppearance="@style/MaterialLightTitleH2" />

    </LinearLayout>

</android.support.v7.widget.CardView>