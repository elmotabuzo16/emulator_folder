<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_vertical_small"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/card_vertical_margin_huge"
        android:paddingTop="@dimen/card_vertical_margin_huge">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_vertical_margin_big"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_wd_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_horizontal_margin_medium"
                android:layout_marginStart="@dimen/card_horizontal_margin_medium" />

            <TextView
                android:id="@+id/tv_wd_points_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="@dimen/card_horizontal_margin_medium"
                android:layout_marginLeft="@dimen/card_horizontal_margin_medium"
                android:layout_marginRight="@dimen/card_horizontal_margin_medium"
                android:layout_marginStart="@dimen/card_horizontal_margin_medium"
                android:text="@string/potential_points.how_to_calculate_heart_rate_title_483"
                android:textAppearance="@style/MaterialLightTitleH2" />

        </LinearLayout>

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_divider_12" />

        <TextView
            android:id="@+id/tv_condition_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wd_points_range_text_spacing"
            android:layout_marginEnd="@dimen/card_horizontal_margin_medium"
            android:layout_marginLeft="@dimen/card_horizontal_margin_medium"
            android:layout_marginRight="@dimen/card_horizontal_margin_medium"
            android:layout_marginStart="@dimen/card_horizontal_margin_medium"
            android:layout_marginTop="@dimen/card_vertical_margin_big"
            android:textAppearance="@style/MaterialLightBody1Secondary"
            tools:text="@string/potential_points.how_to_calculate_heart_rate_484" />

    </LinearLayout>

</android.support.v7.widget.CardView>
