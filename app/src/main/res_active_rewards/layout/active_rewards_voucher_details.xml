<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/AR.rewards.partner_logo_content_description_761"
        tools:src="@drawable/starbucks_200_x_150" />

    <TextView
        android:id="@+id/reward_name"
        style="@style/MaterialLightBody1Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone"
        tools:text="Starbucks reward"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/reward_value_and_type"
        style="@style/MaterialLightHeadlineH1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        tools:text="Extremely long voucher name to test the margins and wrapping"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/reward_description"
        style="@style/MaterialLightBody1Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        tools:text="Starbucks reward"
        tools:visibility="visible" />

</LinearLayout>
