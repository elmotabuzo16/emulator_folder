<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_card_height"
    card_view:cardCornerRadius="@dimen/home_card_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/small_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:src="@drawable/rewards"
            android:tint="@color/salmon_pink"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/small_logo"
            android:layout_marginStart="@dimen/activity_horizontal_margin_small"
            android:layout_toEndOf="@+id/small_logo"
            android:text="@string/AR.homescreen_card.rewards_title_785"
            android:textAppearance="@style/MaterialLightBody1Disabled"
            android:textColor="@color/light_primary_38"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/small_logo"
            android:layout_below="@+id/heading">

            <RelativeLayout
                android:id="@+id/large_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/generic.home.card_icon_content_description_762"
                    android:src="@drawable/ic_rewards_trophy_lrg" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_toEndOf="@+id/large_logo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AR.rewards_earned_title_782"
                    android:textAppearance="@style/MaterialLightTitleH2" />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin_tiny"
                    android:text="@string/AR.rewards_expiring_soon_title_783"
                    android:textAppearance="@style/MaterialLightBody1Secondary"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/action_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin_tiny"
                    android:text="@string/AR.homescreen_card.available_spins_button_title_787"
                    android:textAllCaps="true"
                    android:textAppearance="@style/MaterialLightBody2"
                    android:textColor="@color/salmon_pink" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>