<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/active_rewards_item_weekly_target">

    <TextView
        android:id="@+id/txtWeeklyTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/MaterialLightBody1Disabled"
        android:text="@string/AR.onboarding.common_item1_heading_665"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/txtWillStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWeeklyTarget"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textAppearance="@style/MaterialLightBody2"
        android:drawableStart="@drawable/weekly_target"
        android:drawablePadding="8dp"/>

</RelativeLayout>
