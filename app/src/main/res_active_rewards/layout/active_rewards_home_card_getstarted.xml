<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_card_height">

    <ImageView
        android:id="@+id/small_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/activerewards"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/small_logo"
        android:layout_marginStart="@dimen/activity_horizontal_margin_small"
        android:layout_toEndOf="@+id/small_logo"
        android:text="@string/AR.Landing.home_view_title_710"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/small_logo"
        android:layout_below="@+id/heading">

        <ImageView
            android:id="@+id/large_logo"
            android:layout_width="@dimen/card_large_icon_size"
            android:layout_height="@dimen/card_large_icon_size"
            android:layout_centerVertical="true"
            android:contentDescription="@string/generic.home.card_icon_content_description_762"
            android:src="@drawable/activerewards_getstarted" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@+id/large_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/AR.Landing.home_view_title_710"
                android:textAppearance="@style/MaterialLightTitleH2" />

            <TextView
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/get_started_button_title_103"
                android:textAllCaps="true"
                android:textAppearance="@style/MaterialLightBody2"
                android:textColor="@color/water_blue" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
