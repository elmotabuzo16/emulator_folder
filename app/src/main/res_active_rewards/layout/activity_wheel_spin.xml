<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reward_spin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.vitalityactive.va.activerewards.rewards.WheelSpinActivity">

    <include layout="@layout/toolbar" />

    <include
        android:id="@+id/loading_indicator"
        layout="@layout/in_content_loading_indicator"
        android:visibility="gone" />

    <include
        android:id="@+id/empty_state"
        layout="@layout/empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/rewards_got_it_subheading_margin_sides"
                android:layout_marginLeft="@dimen/rewards_got_it_subheading_margin_sides"
                android:layout_marginRight="@dimen/rewards_got_it_subheading_margin_sides"
                android:layout_marginStart="@dimen/rewards_got_it_subheading_margin_sides"
                android:layout_marginTop="@dimen/rewards_got_it_trophy_margin_top"
                android:text="@string/AR.rewards.choose_reward_body_title_674"
                android:textAppearance="@style/MyHealthOnboardingHeader" />

            <TextView
                android:id="@+id/subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/rewards_got_it_subheading_margin_sides"
                android:layout_marginLeft="@dimen/rewards_got_it_subheading_margin_sides"
                android:layout_marginRight="@dimen/rewards_got_it_subheading_margin_sides"
                android:layout_marginStart="@dimen/rewards_got_it_subheading_margin_sides"
                android:layout_marginTop="@dimen/onboarding_subheading_text_margin"
                android:text="@string/AR.rewards.spin_instruction_718"
                android:textAlignment="center"
                android:textAppearance="@style/MaterialLightBody1" />

            <LinearLayout
                android:id="@+id/spin_layout"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/subheading"
                android:layout_marginTop="@dimen/rewards_got_it_spinner_margin_top"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/rewards_spinner_margin"
                android:paddingLeft="@dimen/rewards_spinner_margin"
                android:paddingRight="@dimen/rewards_spinner_margin"
                android:paddingTop="@dimen/rewards_spinner_margin">

                <com.vitalityactive.va.uicomponents.slotmachine.SlotMachineView
                    android:id="@+id/wheel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_spin_now"
                style="@style/DefaultButtonColored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spin_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/get_started_button_top_margin"
                android:onClick="onSpinNowClicked"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:text="@string/AR.rewards.spin_now_title_704" />

            <Button
                android:id="@+id/btn_participating_partners"
                style="@style/LinkButtonInverted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_spin_now"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:onClick="onParticipatingPartnersClicked"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:text="@string/AR.learn_more.participating_partners_title_696" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
