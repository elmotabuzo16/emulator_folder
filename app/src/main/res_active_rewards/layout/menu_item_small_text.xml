<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_email_left"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/active_rewards_menu_item_text_margin"
        android:layout_weight="0.9"
        android:gravity="center_vertical"
        android:textAppearance="@style/MaterialLightSubhead"
        android:textSize="16sp"
        tools:text="Learn More" />

    <TextView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:background="@color/crimson_red"
        android:gravity="center"
        android:minWidth="20dp"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:textAlignment="center"
        android:textAppearance="@style/MaterialDarkSubhead"
        android:visibility="gone"
        tools:text="1"
        tools:visibility="visible" />

</LinearLayout>
