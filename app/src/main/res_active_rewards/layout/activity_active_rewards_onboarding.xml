<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/root_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_active_rewards_onboarding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/onboarding_improve_your_health">

            <!-- this is at the bottom, but needed to be declared first -->
            <Button
                android:id="@+id/learn_more_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/onboarding_button_margin_bottom"
                android:onClick="onLearnMoreTapped"
                android:text="@string/learn_more_button_title_104"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
                android:textSize="@dimen/onboarding_subtitle_text_size" />

            <Button
                android:id="@+id/get_started_button"
                style="@style/DefaultButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:layout_above="@id/learn_more_button"
                android:onClick="onGetStartedTapped"
                android:text="@string/get_started_button_title_103"
                android:theme="@style/OnboardingButton" />

            <!-- top -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentTop="true"
                android:layout_above="@id/get_started_button"
                tools:context="com.vitalityactive.va.activerewards.onboarding.ActiveRewardsOnboardingActivity">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="@dimen/onboarding_title_width"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/onboarding_title_margin"
                    android:layout_marginTop="@dimen/onboarding_title_margin"
                    android:gravity="center_vertical"
                    android:text="@string/AR.onboarding.common_heading_682"
                    android:textAppearance="@style/MaterialLightHeadlineH1"
                    android:textColor="?android:attr/textColorPrimaryInverse"
                    android:textSize="@dimen/onboarding_title_text_size" />

                <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_marginBottom="@dimen/onboarding_text_margin_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:orientation="horizontal"
                        android:rowCount="4">

                        <ImageView
                            android:layout_column="0"
                            android:layout_marginEnd="32dp"
                            android:layout_marginTop="@dimen/onboarding_icon_margin_top"
                            android:layout_rowSpan="2"
                            android:layout_row="0"
                            android:src="@drawable/onboarding_calendar"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/active_rewards_onboarding_section_1_title"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                            android:text="@string/AR.onboarding.common_item1_heading_665"
                            android:textAppearance="@style/MaterialLightSubheadH3"
                            android:textColor="?android:attr/textColorPrimaryInverse" />

                        <TextView
                            android:id="@+id/active_rewards_onboarding_section_1_content"
                            android:layout_gravity="fill_horizontal"
                            android:layout_width="0dp"
                            android:layout_marginBottom="@dimen/onboarding_icon_margin_bottom"
                            android:text="@string/AR.onboarding.common_item1_731"
                            android:textAppearance="@style/MaterialDarkBody1" />

                        <ImageView
                            android:layout_marginBottom="@dimen/onboarding_icon_margin_bottom"
                            android:layout_marginTop="@dimen/onboarding_icon_margin_top"
                            tools:ignore="ContentDescription"
                            android:layout_rowSpan="2"
                            android:src="@drawable/onboarding_rings" />

                        <TextView
                            android:id="@+id/active_rewards_onboarding_section_2_title"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                            android:text="@string/AR.onboarding.common_item2_heading_715"
                            android:textAppearance="@style/MaterialLightSubheadH3"
                            android:textColor="?android:attr/textColorPrimaryInverse" />

                        <TextView
                            android:id="@+id/active_rewards_onboarding_section_2_content"
                            android:layout_width="0dp"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginBottom="@dimen/onboarding_icon_margin_bottom"
                            android:text="@string/AR.onboarding.common_item2_683"
                            android:textAppearance="@style/MaterialDarkBody1" />

                        <ImageView
                            android:layout_marginBottom="@dimen/onboarding_icon_margin_bottom"
                            android:layout_marginTop="@dimen/onboarding_icon_margin_top"
                            tools:ignore="ContentDescription"
                            android:layout_rowSpan="2"
                            android:src="@drawable/onboarding_trophy" />

                        <TextView
                            android:id="@+id/active_rewards_onboarding_section_3_title"
                            android:layout_width="0dp"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                            android:text="@string/AR.onboarding.common_item3_heading_697"
                            android:textAppearance="@style/MaterialLightSubheadH3"
                            android:textColor="?android:attr/textColorPrimaryInverse" />

                        <TextView
                            android:id="@+id/active_rewards_onboarding_section_3_content"
                            android:layout_width="0dp"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginBottom="@dimen/onboarding_icon_margin_bottom"
                            android:text="@string/AR.onboarding.common_item3_666"
                            android:textAppearance="@style/MaterialDarkBody1" />

                        <ImageView
                            android:id="@+id/active_rewards_onboarding_icon4"
                            android:layout_marginTop="@dimen/onboarding_icon_margin_top"
                            tools:ignore="ContentDescription"
                            android:layout_rowSpan="2"
                            android:src="@drawable/onboarding_spinner" />

                        <TextView
                            android:id="@+id/active_rewards_onboarding_section_4_title"
                            android:layout_width="0dp"
                            android:layout_gravity="fill_horizontal"
                            android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                            android:textColor="?android:attr/textColorPrimaryInverse"
                            android:text="@string/AR.onboarding.probabilistic_item4_heading_699"
                            android:textAppearance="@style/MaterialLightSubheadH3" />

                        <TextView
                            android:id="@+id/active_rewards_onboarding_section_4_content"
                            android:layout_width="0dp"
                            android:layout_gravity="fill_horizontal"
                            android:text="@string/AR.onboarding.probabilistic_item4_698"
                            android:textAppearance="@style/MaterialDarkBody1" />
                    </GridLayout>

                </ScrollView>
            </LinearLayout>

        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>
