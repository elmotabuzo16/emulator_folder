<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_snv_confirm_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.vitalityactive.va.vhc.captureresults.VHCCaptureResultsActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/card_vertical_margin_big"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_vertical_margin_big"
                    android:text="@string/SV.confirm_submit_intro_title_1015"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/onboarding_subheading_text_size" />

                <include
                    android:id="@+id/vhc_divider"
                    layout="@layout/horizontal_rule"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/confirm_submit_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/ar_padding_medium"
                    android:text="@string/SV.confirm_submit_intro_message_1016"
                    android:textAlignment="textStart" />
            </LinearLayout>


        </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/screenings_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/confirm_and_submit_sicon"
                            android:layout_width="@dimen/profile_icon_size"
                            android:layout_height="@dimen/profile_icon_size"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/lm_item_padding_end"
                            android:background="@drawable/screenings"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/screening_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:paddingTop="@dimen/ar_padding_medium"
                            android:text="@string/SV.screenings_title_1012"
                            android:textAlignment="textStart"
                            android:textAppearance="@style/MaterialLightTitleH2" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/confirm_submit_recycler_screening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/vaccination_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/confirm_and_submit_vicon"
                            android:layout_width="@dimen/profile_icon_size"
                            android:layout_height="@dimen/profile_icon_size"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/lm_item_padding_end"
                            android:background="@drawable/vaccinations"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/vaccination_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:paddingTop="@dimen/ar_padding_medium"
                            android:text="@string/SV.vaccinations_title_1013"
                            android:textAlignment="textStart"
                            android:textAppearance="@style/MaterialLightTitleH2" />

                    </LinearLayout>

                    <include
                        android:id="@+id/vhc_divider"
                        layout="@layout/horizontal_rule"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="13dp"
                        android:layout_marginTop="13dp"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="@color/light_disabled_38"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/SV.confirm_submit_vaccinations_message_1017"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/confirm_submit_recycler_vaccination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <include
                layout="@layout/button_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>


    </LinearLayout>
</RelativeLayout>