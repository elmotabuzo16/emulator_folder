<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/card_vertical_margin_medium"
    android:paddingEnd="@dimen/card_horizontal_margin_medium"
    android:paddingLeft="@dimen/card_horizontal_margin_medium"
    android:paddingRight="@dimen/card_horizontal_margin_medium"
    android:paddingStart="@dimen/card_horizontal_margin_medium">

    <TextView
        android:id="@+id/points_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textAppearance="@style/MaterialLightHeadlineH1"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/points_title"
        android:layout_marginBottom="8dp"
        android:text="90-119 min vigorous device workout"
        android:textAppearance="@style/MaterialLightBody1" />

    <TextView
        android:id="@+id/device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:text="Fitbit"
        android:textAppearance="@style/MaterialLightCaptionSecondary"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Today"
        android:textAppearance="@style/MaterialLightCaptionDisabled" />

</RelativeLayout>
