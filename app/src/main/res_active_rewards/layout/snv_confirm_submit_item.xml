<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/horizontal_rule"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/active_rewards_menu_item_height"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/snv_item_field_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/snv_unit_checkbox"
            android:layout_alignBottom="@+id/snv_unit_checkbox"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/MaterialLightSubhead"
            tools:text="Pap Smear" />

        <CheckBox
            android:id="@+id/snv_unit_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@id/snv_item_field_txt"
            android:layout_centerInParent="true"
            android:spinnerMode="dropdown"
            android:clickable="true"
            android:focusable="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/snv_date_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_divider_inset"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/snv_measurement_item_date_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/snv_date_tested"
            android:layout_marginTop="16dp"
            android:text="@string/capture_results.date_tested_144"
            android:textColor="@color/light_primary_38"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/snv_date_tested"
            style="@style/Widget.AppCompat.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/snv_measurement_item_date_title"
            android:layout_marginStart="@dimen/activity_horizontal_margin_tiny"
            android:text="Wed, 29 Mar 2017"
            android:textAppearance="@style/MaterialLightSubhead"
            tools:ignore="HardcodedText" />

        <include
            layout="@layout/horizontal_rule"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/snv_date_tested"/>

    </RelativeLayout>

</LinearLayout>
