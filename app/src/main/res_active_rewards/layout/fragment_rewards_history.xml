<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vitalityactive.va.activerewards.rewards.RewardsHistoryFragment">

    <RelativeLayout
        android:id="@+id/history_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/active_rewards_rewards_list_no_history_title"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="@string/active_rewards_rewards_list_no_history_subtitle"
                android:textAlignment="center" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
