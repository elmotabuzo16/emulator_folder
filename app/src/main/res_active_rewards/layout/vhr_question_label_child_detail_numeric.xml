<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/vhr_question_text_side_margins"
    android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/vhr_label_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vhr_question_text_side_margins"
        android:hint="value"
        tools:ignore="HardcodedText">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/vhr_label_input_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vhr_question_input_height"
            android:maxLength="10"
            android:textSize="@dimen/onboarding_subtitle_text_size" />
    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
