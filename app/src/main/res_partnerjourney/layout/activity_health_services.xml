<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.vitalityactive.va.partnerjourney.PartnerListActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <include layout="@layout/in_content_loading_indicator"
        tools:visibility="gone" />

    <include
        android:id="@+id/empty_state"
        layout="@layout/empty_state"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/health_service_items"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="vertical"
        tools:context=".partnerjourney.PartnerListActivity" />

</LinearLayout>
