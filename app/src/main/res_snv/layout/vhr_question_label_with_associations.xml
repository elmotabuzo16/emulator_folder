<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vhr_cards_margins"
    android:background="@android:color/white"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vhr_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:includeFontPadding="false"
            android:textAppearance="@style/MaterialLightSubheadH3"
            android:layout_marginBottom="@dimen/vhr_question_text_top_margin"
            tools:text="Select the medical conditions that your family has been diagnosed or prescribed medication for by a doctor." />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/vhr_question_label_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/vhr_question_header"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    </LinearLayout>

</android.support.v7.widget.CardView>
