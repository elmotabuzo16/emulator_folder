<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/card_spacing"
    android:paddingTop="@dimen/card_spacing"
    card_view:cardCornerRadius="2dp"
    tools:context=".vitalitystatus.landing.VitalityStatusLandingActivity">

    <FrameLayout
        android:id="@+id/animation_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:id="@+id/medal_icon"
            android:layout_width="152dp"
            android:layout_height="152dp"
            tools:src="@drawable/navdrawer_help" />

        <TextView
            android:id="@+id/level_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:textAppearance="@style/MaterialLightHeadlineH1"
            tools:text="Bronze" />

        <TextView
            android:id="@+id/status_points_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/MaterialLightSubhead"
            tools:text="10 000 points to reach silver" />

        <ProgressBar
            android:id="@+id/status_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="8dp"
            tools:progress="10"
            android:progressDrawable="@drawable/curved_progress_bar" />

        <Button
            android:id="@+id/my_rewards_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="handleMyRewardsButtonTapped"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="32dp"
            android:text="@string/Status.landing_button_rewards_title_798" />
    </LinearLayout>

</android.support.v7.widget.CardView>