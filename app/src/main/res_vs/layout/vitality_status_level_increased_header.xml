<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confetti_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".vitalitystatus.landing.VitalityStatusLandingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/medal_icon"
            android:layout_width="152dp"
            android:layout_height="152dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            tools:src="@drawable/navdrawer_help" />

        <TextView
            android:id="@+id/level_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medal_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:textAppearance="@style/MaterialLightHeadlineH1"
            tools:text="Bronze" />

        <TextView
            android:id="@+id/status_points_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/level_status_text"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="@android:color/white"
            android:includeFontPadding="false"
            android:textAlignment="center"
            android:textAppearance="@style/MaterialLightBody1Secondary"
            tools:text="10 000 points to reach silver" />

        <include
            layout="@layout/horizontal_rule"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</FrameLayout>