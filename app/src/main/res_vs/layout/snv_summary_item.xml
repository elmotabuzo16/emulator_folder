<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/snv_summary_date_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_divider_inset"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/snv_summary_date_tested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Pap Smear"
            android:textAppearance="@style/MaterialLightSubhead"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/snv_measurement_item_date_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/snv_summary_date_tested"
            android:layout_alignStart="@+id/snv_summary_date_tested"
            tools:text="Tested on January 1, 2019"
            android:textColor="@color/light_primary_38"
            android:textSize="12sp" />

        <include
            layout="@layout/horizontal_rule"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/snv_measurement_item_date_title"
            android:layout_marginTop="16dp" />

    </RelativeLayout>

</LinearLayout>
