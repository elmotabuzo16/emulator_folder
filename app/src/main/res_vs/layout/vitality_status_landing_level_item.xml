<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".vitalitystatus.landing.VitalityStatusLandingActivity">

    <View
        android:id="@+id/dashed_line"
        android:layout_width="1dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@id/medal_icon"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/medal_icon"
        android:background="@drawable/vertical_dashed_line"
        android:layerType="software" />

    <ImageView
        android:id="@+id/medal_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        tools:src="@drawable/active_reward" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/medal_icon"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/medal_icon"
            android:textAppearance="@style/MaterialLightTitle"
            tools:text="Title" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginBottom="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/secondary_54"
            tools:text="Status text" />

    </LinearLayout>

    <ImageView
        android:id="@+id/rewards_item_question_mark_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:onClick="handleVitalityStatusInfoIconTapped"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:src="@drawable/info_24"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>
