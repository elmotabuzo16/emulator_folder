<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    tools:context=".vitalitystatus.landing.VitalityStatusLandingActivity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:src="@drawable/history" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/icon">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MaterialLightTitle"
            android:textSize="16sp"
            tools:text="Assessments" />

        <ImageView
            android:id="@+id/completed_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginEnd="8dp"
            android:src="@drawable/checkmark"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/limit_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/completed_icon"
            android:includeFontPadding="false"
            android:text="@string/Status.landing_earning_points_limit_message_822"
            android:textAppearance="@style/MaterialLightBody1Secondary"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/points_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/limit_status"
            android:layout_marginEnd="8dp"
            android:src="@drawable/points_16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/limit_status"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/points_icon"
            android:includeFontPadding="false"
            android:textAppearance="@style/MaterialLightBody1Secondary"
            tools:text="4000 points" />
    </RelativeLayout>
</RelativeLayout>