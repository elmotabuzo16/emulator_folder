<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/get_started_button"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context="com.vitalityactive.va.vhc.VHCOnboardingActivity">

        <TextView
            android:id="@+id/onboarding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:textAppearance="@style/MaterialLightHeadlineH1"
            android:textSize="@dimen/onboarding_title_text_size"
            android:textStyle="bold"
            tools:text="Onboarding Title Goes Here" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/onboarding_text_margin_bottom">

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="6">

                <ImageView
                    android:id="@+id/onboarding_section1_icon"
                    android:layout_column="0"
                    android:layout_marginBottom="@dimen/onboarding_icon_margin_bottom"
                    android:layout_marginEnd="32dp"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:contentDescription="@string/onboarding.section_1_title_126"
                    android:src="@drawable/help_24" />

                <TextView
                    android:id="@+id/onboarding_section1_title"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                    android:textAppearance="@style/MaterialLightSubheadH3"
                    android:textSize="@dimen/onboarding_subheading_text_size"
                    android:textStyle="bold"
                    tools:text="Section 1 title" />

                <TextView
                    android:id="@+id/onboarding_section1_content"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_text_margin_bottom"
                    android:textAppearance="@style/MaterialLightBody1"
                    android:textSize="@dimen/onboarding_subtitle_text_size"
                    tools:text="Section 1 content" />

                <ImageView
                    android:id="@+id/onboarding_section2_icon"
                    android:layout_column="0"
                    android:layout_marginBottom="@dimen/onboarding_icon_margin_bottom"
                    android:layout_marginEnd="32dp"
                    android:layout_row="2"
                    android:layout_rowSpan="2"
                    android:contentDescription="@string/onboarding.section_2_title_128"
                    android:src="@drawable/onboarding_earn_points" />

                <TextView
                    android:id="@+id/onboarding_section2_title"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                    android:textAppearance="@style/MaterialLightSubheadH3"
                    android:textSize="@dimen/onboarding_subheading_text_size"
                    android:textStyle="bold"
                    tools:text="Section 2 title" />

                <TextView
                    android:id="@+id/onboarding_section2_content"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_text_margin_bottom"
                    android:textAppearance="@style/MaterialLightBody1"
                    android:textSize="@dimen/onboarding_subtitle_text_size"
                    tools:text="Section 2 content" />

                <ImageView
                    android:id="@+id/onboarding_section3_icon"
                    android:layout_column="0"
                    android:layout_marginBottom="@dimen/onboarding_icon_margin_bottom"
                    android:layout_marginEnd="32dp"
                    android:layout_row="4"
                    android:layout_rowSpan="2"
                    android:contentDescription="@string/onboarding.section_2_title_128"
                    android:src="@drawable/onboarding_earn_points"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/onboarding_section3_title"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                    android:textAppearance="@style/MaterialLightSubheadH3"
                    android:textSize="@dimen/onboarding_subheading_text_size"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="Section 3 title" />

                <TextView
                    android:id="@+id/onboarding_section3_content"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_text_margin_bottom"
                    android:textAppearance="@style/MaterialLightBody1Secondary"
                    android:textSize="@dimen/onboarding_subtitle_text_size"
                    android:visibility="gone"
                    tools:text="Section 3 content" />

            </GridLayout>
        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/learn_more_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:onClick="onGetStartedTapped"
        android:text="@string/generic_got_it_button_title_131" />

    <Button
        android:id="@+id/learn_more_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/onboarding_button_margin_bottom"
        android:onClick="onLearnMoreTapped"
        android:text="@string/learn_more_button_title_104"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        android:textSize="@dimen/onboarding_subtitle_text_size" />
</RelativeLayout>
