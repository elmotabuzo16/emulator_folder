<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/non_smoker_declaration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/onboarding_know_your_health"
    tools:context="com.vitalityactive.va.wellnessdevices.landing.WellnessDevicesLandingActivity">

    <!-- NSD onboarding has the toolbar, so the normal outer relative layout is moved as an item nested inside a linear layout -->

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        style="@style/ToolbarNoElevation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="0dp"
        android:theme="@style/ActionBarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="?android:attr/textColorPrimaryInverse"
        tools:showIn="@layout/activity_active_rewards_rewardslist">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Title.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@drawable/arrow_drop_down"
            android:gravity="center_vertical"
            android:text="All Points"
            android:visibility="gone" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_above="@id/get_started_button" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/onboarding_title_margin"
                android:layout_marginTop="@dimen/onboarding_title_margin"
                android:gravity="center_vertical"
                android:text="@string/home_card.card_title_96"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="?android:attr/textColorPrimaryInverse"
                android:textSize="@dimen/onboarding_title_text_size"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/onboarding_text_margin_bottom" >

                <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:rowCount="4">

                    <ImageView
                        android:layout_column="0"
                        android:layout_marginBottom="@dimen/onboarding_icon_margin_bottom"
                        android:layout_marginEnd="32dp"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:contentDescription="@string/non_smoker_earn_points_content_description"
                        android:src="@drawable/nonsmokers_earnpoints" />

                    <TextView
                        android:id="@+id/non_smoker_earn_points_title"
                        android:layout_width="0dp"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                        android:text="@string/onboarding.section_1_title_99"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                        android:textSize="@dimen/onboarding_subheading_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/non_smoker_earn_points_text"
                        android:layout_width="0dp"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginBottom="@dimen/onboarding_text_margin_bottom"
                        android:text="@string/onboarding.section_1_message_100"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:textSize="@dimen/onboarding_subtitle_text_size" />

                    <ImageView
                        android:layout_column="0"
                        android:layout_marginBottom="@dimen/onboarding_icon_margin_bottom"
                        android:layout_marginEnd="32dp"
                        android:layout_row="2"
                        android:layout_rowSpan="2"
                        android:contentDescription="@string/non_smoker_smoking_status_content_description"
                        android:src="@drawable/nonsmokers_smokestatus" />

                    <TextView
                        android:id="@+id/non_smoker_smoking_status_title"
                        android:layout_width="0dp"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                        android:text="@string/onboarding.section_2_title_101"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                        android:textSize="@dimen/onboarding_subheading_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/non_smoker_smoking_status_text"
                        android:layout_width="0dp"
                        android:layout_gravity="fill_horizontal"
                        android:text="@string/onboarding.section_2_message_102"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:textSize="@dimen/onboarding_subtitle_text_size" />

                </GridLayout>
            </ScrollView>
        </LinearLayout>

        <Button
            android:id="@+id/learn_more_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/onboarding_button_margin_bottom"
            android:layout_alignParentBottom="true"
            android:onClick="onLearnMoreTapped"
            android:text="@string/learn_more_button_title_104"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
            android:textSize="@dimen/onboarding_subtitle_text_size" />

        <Button
            android:id="@+id/get_started_button"
            style="@style/DefaultButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_above="@id/learn_more_button"
            android:layout_centerInParent="true"
            android:onClick="onGetStartedTapped"
            android:text="@string/get_started_button_title_103"
            android:theme="@style/OnboardingButton" />
    </RelativeLayout>
</LinearLayout>
