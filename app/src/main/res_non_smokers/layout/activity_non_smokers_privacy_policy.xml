<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/non_smoker_privacy_policy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.vitalityactive.va.nonsmokersdeclaration.NonSmokersPrivacyPolicyActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/agree_button_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/loginBackgroundDisabled"
            android:orientation="horizontal">

            <Button
                android:id="@+id/policy_agree_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:text="@string/agree_button_title_50"
                android:onClick="onAgreeButtonTapped"/>
        </FrameLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
