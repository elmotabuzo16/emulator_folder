<?xml version="1.0" encoding="utf-8"?><!-- same as nsd, change both. consider refactoring and using a single card layout -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_card_height"
    card_view:cardCornerRadius="@dimen/home_card_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/small_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:src="@drawable/vhc_small"
            android:tint="@color/jungle_green"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/small_logo"
            android:layout_marginStart="@dimen/activity_horizontal_margin_small"
            android:layout_toEndOf="@+id/small_logo"
            android:text="@string/home_card.card_title_125"
            android:textAppearance="@style/MaterialLightBody1Disabled"
            android:textColor="@color/light_primary_38"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/large_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/vhc_content_description_get_started_with_vitality_health_check"
                android:src="@drawable/vhc_80" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="59dp"
            android:layout_toEndOf="@+id/large_logo"
            android:text="@string/home_card.card_earn_up_to_points_message_124"
            android:textAppearance="@style/MaterialLightHeadlineH1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/get_started_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/title"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/home_card_get_started_top_margin"
            android:text="@string/get_started_button_title_103"
            android:textAllCaps="true"
            android:textColor="@color/jungle_green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/title"
            android:layout_below="@id/title"
            android:layout_marginTop="4dp"
            android:textColor="@color/secondary_54"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
