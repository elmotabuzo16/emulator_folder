<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vhc_capture_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vitalityactive.va.vhc.captureresults.VHCCaptureResultsActivity">

    <include layout="@layout/toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        card_view:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:background="@color/active_rewards_divider_background"
        android:layout_height="0dp">
    </android.support.v7.widget.RecyclerView>

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/button_bar" />

</LinearLayout>
