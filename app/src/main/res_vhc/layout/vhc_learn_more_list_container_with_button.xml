<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal"
    android:rowCount="7">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="7">

        <ImageView
            android:id="@+id/icon"
            android:layout_column="0"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="32dp"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:src="@drawable/achieved_trophy_s" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginEnd="34dp"
            android:layout_marginTop="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginEnd="34dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp" />

        <Button
            android:id="@+id/vhc_participating_partners_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="onParticipatingPartnersTapped"
            android:padding="0dp"
            android:text="@string/participating_partners_title_262"
            android:textColor="@color/jungle_green"
            android:textSize="@dimen/onboarding_subtitle_text_size" />
    </GridLayout>
</android.support.v7.widget.CardView>