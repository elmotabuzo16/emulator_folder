<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/light_primary_38"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_text"

                android:lineSpacingExtra="0dp"
                tools:text="300,00"
                android:textAppearance="@style/MaterialLightHeadlineH1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unit_of_measure_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/value_text"
                android:layout_alignTop="@id/value_text"
                android:layout_below="@+id/title_text"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/value_text"
                android:gravity="bottom"
                android:lineSpacingExtra="0dp"
                android:paddingBottom="2dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="in" />

            <TextView
                android:id="@+id/subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/value_text"
                android:layout_below="@id/value_text"
                android:textAppearance="@style/MaterialLightSubheadSecondary"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/feedback_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/value_text"
                android:layout_below="@+id/subtitle_text"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/vhc_attribute_feedback_icon_content_description"
                android:visibility="gone" />

            <TextView
                android:id="@+id/feedback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/feedback_icon"
                android:layout_below="@id/subtitle_text"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@+id/feedback_icon"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:visibility="gone" />

            <TextView
                android:id="@+id/feedback_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/feedback_text"
                android:layout_below="@id/feedback_text"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/points_status_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/value_text"
                android:layout_below="@id/feedback_subtext"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/vhc_points_status_icon_content_description"
                android:visibility="gone" />

            <TextView
                android:id="@+id/points_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/points_status_icon"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@id/points_status_icon"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:visibility="gone" />

            <TextView
                android:id="@+id/points_status_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/points_status_text"
                android:layout_below="@+id/points_status_text"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:visibility="gone" />
        </RelativeLayout>

        <include
            android:id="@+id/divider"
            layout="@layout/horizontal_rule"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/container"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/source_submitted_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/container"
            android:layout_below="@id/divider"
            android:layout_marginTop="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:visibility="gone" />

        <TextView
            android:id="@+id/source_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/container"
            android:layout_below="@id/source_submitted_text"
            android:layout_marginBottom="12dp"
            android:text="@string/detail_screen.source_title_198"
            android:visibility="gone" />

        <include
            android:id="@+id/inset_divider"
            layout="@layout/horizontal_rule"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/source_title_text"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:visibility="gone" />

        <TextView
            android:id="@+id/date_tested_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/container"
            android:layout_below="@+id/inset_divider"
            android:layout_marginTop="17dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/date_tested_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/container"
            android:layout_below="@id/date_tested_text"
            android:layout_marginBottom="21dp"
            android:text="@string/capture_results.date_tested_144" />

    </RelativeLayout>
</android.support.v7.widget.CardView>