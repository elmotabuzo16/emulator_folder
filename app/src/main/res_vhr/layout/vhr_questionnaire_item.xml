<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@android:color/white">

    <Button
        android:id="@+id/vhr_item_button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:minWidth="88dp"
        android:theme="@style/VHRGreenButtonWithWhiteText"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/vhr_questionnaire_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/vhr_item_button_start"
        android:layout_toStartOf="@id/vhr_item_button_start"
        android:text="Section"
        android:textAppearance="@style/MaterialLightBody2"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/vhr_item_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:minWidth="88dp"
        android:text="@string/landing_screen.edit_button_307"
        android:theme="@style/VHRButtonWithGrayText"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/vhr_completed_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/subtitle"
        android:layout_alignTop="@id/subtitle"
        android:layout_marginEnd="8dp"
        android:src="@drawable/checkmark"
        android:visibility="gone" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vhr_questionnaire_item_title"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/vhr_completed_icon"
        android:drawablePadding="8dp"
        android:text="minutes"
        android:textAppearance="@style/MaterialLightBody1Secondary"
        tools:ignore="HardcodedText" />

    <include
        layout="@layout/horizontal_rule"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>