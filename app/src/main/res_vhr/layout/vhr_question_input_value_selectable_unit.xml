<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vhr_cards_margins"
    android:background="@android:color/white"
    app:cardCornerRadius="0dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/vhr_question_header"
            layout="@layout/vhr_question_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- begin unique question middle part -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/vhr_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
                android:layout_marginStart="@dimen/vhr_question_text_side_margins"
                android:layout_marginTop="@dimen/vhr_question_value_margin_to_details"
                android:hint="value"
                android:paddingBottom="24dp"
                tools:ignore="HardcodedText">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/vhr_input_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vhr_question_input_height"
                    android:maxLength="10"
                    android:textSize="@dimen/onboarding_subtitle_text_size" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/vhr_input_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/vhr_input_layout"
                android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
                android:layout_marginTop="10dp"
                android:spinnerMode="dropdown"
                android:text="unit"
                android:textColor="@color/light_primary_87"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/vhr_input_layout_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
            android:layout_marginStart="@dimen/vhr_question_text_side_margins"
            android:hint="value"
            android:paddingBottom="24dp"
            android:visibility="visible"
            tools:ignore="HardcodedText">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/vhr_input_value_second"
                android:layout_width="match_parent"
                android:layout_height="@dimen/vhr_question_input_height"
                android:maxLength="10"
                android:textSize="@dimen/onboarding_subtitle_text_size" />
        </android.support.design.widget.TextInputLayout>

        <!-- end unique question middle part -->

        <include
            android:id="@+id/vhr_question_pre_population_details"
            layout="@layout/vhr_question_pre_population_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/vhr_question_footer"
            layout="@layout/vhr_question_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</android.support.v7.widget.CardView>
