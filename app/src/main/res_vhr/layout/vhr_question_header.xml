<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/vhr_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
        android:layout_marginStart="@dimen/vhr_question_text_side_margins"
        android:layout_marginTop="@dimen/vhr_question_text_side_margins"
        android:text="Question text"
        android:textAppearance="@style/MaterialLightSubheadH3"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/vhr_question_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vhr_question_text"
        android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
        android:layout_marginStart="@dimen/vhr_question_text_side_margins"
        android:layout_marginTop="@dimen/vhr_question_detail_margin_to_text"
        android:text="Question details"
        android:textAppearance="@style/MaterialLightBody1Secondary"
        tools:ignore="HardcodedText" />

    <Space
        android:id="@+id/vhr_question_detail_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"
        android:layout_below="@id/vhr_question_detail"
        android:visibility="gone" />

</RelativeLayout>
