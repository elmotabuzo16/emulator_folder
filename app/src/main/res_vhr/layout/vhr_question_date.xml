<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vhr_cards_margins"
    android:background="@android:color/white"
    app:cardCornerRadius="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/vhr_question_header"
            layout="@layout/vhr_question_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <!-- begin unique question middle part -->
        <TextView
            android:id="@+id/vhr_question_date_picker"
            style="@style/Widget.AppCompat.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vhr_question_header"
            android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
            android:layout_marginStart="@dimen/vhr_question_text_side_margins"
            android:layout_marginTop="@dimen/vhr_question_value_margin_to_details"
            android:textAppearance="@style/MaterialLightSubhead" />

        <include
            android:id="@+id/horizontal_rule"
            layout="@layout/horizontal_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/vhr_question_date_picker"
            android:layout_alignStart="@id/vhr_question_date_picker"
            android:layout_below="@id/vhr_question_date_picker"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8.5dp" />
        <!-- end unique question middle part -->

        <include
            android:id="@+id/vhr_question_pre_population_details"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/horizontal_rule"
            layout="@layout/vhr_question_pre_population_details" />

        <include
            android:id="@+id/vhr_question_footer"
            layout="@layout/vhr_question_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vhr_question_pre_population_details" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
