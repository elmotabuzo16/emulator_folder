<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_know_your_health"
    android:orientation="vertical">

    <ImageView
        android:fitsSystemWindows="true"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_clear_white_24dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:onClick="handleCloseButtonTapped"
        android:layout_height="wrap_content"
        android:contentDescription="@string/vhr_completed_close_content_description" />

    <include
        android:id="@+id/non_smokers_onboarding_circles"
        layout="@layout/non_smokers_onboarding_circles" />

    <include
        android:id="@+id/assessment_questionnaires_completed_content"
        layout="@layout/assessment_completed_content" />
</RelativeLayout>
