<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <Button
        android:id="@+id/vhr_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp"
        android:minWidth="88dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/landing_screen.start_button_305"
        android:theme="@style/VHCSubmitButton" />

    <TextView
        android:id="@+id/vhr_questionnaire_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/vhr_start_button"
        android:layout_toStartOf="@id/vhr_start_button"
        android:textAppearance="@style/MaterialDarkTitle"
        android:textSize="16sp" />

    <Button
        android:id="@+id/vhr_button_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/vhr_questionnaire_item_title"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:minWidth="88dp"
        android:theme="@style/VHRButtonWithGrayText"
        android:visibility="gone" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/vhr_questionnaire_item_title"
        android:layout_below="@id/vhr_questionnaire_item_title"
        android:layout_toStartOf="@id/vhr_start_button"
        android:drawablePadding="8dp"
        android:textAppearance="@style/MaterialDarkBody1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/tab_text" />
</RelativeLayout>