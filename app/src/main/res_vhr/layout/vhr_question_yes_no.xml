<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vhr_cards_margins"
    android:background="@android:color/white"
    app:cardCornerRadius="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- begin shared question top part -->
        <TextView
            android:id="@+id/vhr_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
            android:layout_marginStart="@dimen/vhr_question_text_side_margins"
            android:layout_marginTop="@dimen/vhr_question_text_top_margin"
            android:text="Question text"
            android:textAppearance="@style/MaterialLightHeadlineH1"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/vhr_question_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vhr_question_text"
            android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
            android:layout_marginStart="@dimen/vhr_question_text_side_margins"
            android:layout_marginTop="@dimen/vhr_question_detail_margin_to_text"
            android:text="Question details"
            android:textColor="@color/secondary_54"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />
        <!-- end shared question top part -->

        <!-- begin unique question middle part -->
        <LinearLayout
            android:id="@+id/vhr_question_yes_no_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vhr_yes_no_height"
            android:layout_below="@id/vhr_question_detail"
            android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
            android:layout_marginStart="@dimen/vhr_question_text_side_margins"
            android:layout_marginTop="@dimen/vhr_question_value_margin_to_details"
            android:layout_marginBottom="@dimen/vhr_question_value_margin_to_details"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/vhr_question_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Yes"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@style/MaterialLightBody2"
                android:textSize="48sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/vhr_question_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="No"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@style/MaterialLightBody2"
                android:textSize="48sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <!-- end unique question middle part -->

        <include
            android:id="@+id/vhr_question_pre_population_details"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/vhr_question_yes_no_container"
            layout="@layout/vhr_question_pre_population_details" />

        <include
            android:id="@+id/vhr_question_footer"
            layout="@layout/vhr_question_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vhr_question_pre_population_details" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
