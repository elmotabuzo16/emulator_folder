<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/vhr_question_text_side_margins"
    android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
    android:layout_marginBottom="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/vhr_option_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/vhr_question_text_side_margins"
        android:layout_marginEnd="@dimen/vhr_option_margin"
        android:textAppearance="@style/MaterialLightSubhead"
        tools:ignore="HardcodedText"
        android:text="Option text" />

    <TextView
        android:id="@+id/vhr_option_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vhr_option_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/vhr_option_margin"
        android:layout_marginTop="1dp"
        android:textAppearance="@style/MaterialLightBody1Secondary"
        tools:ignore="HardcodedText"
        android:text="Option info" />

    <TextView
        android:id="@+id/vhr_option_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vhr_option_detail"
        android:layout_marginTop="@dimen/vhr_question_value_margin_to_details"
        tools:ignore="HardcodedText"
        android:textAppearance="@style/MaterialLightSubheadSecondary"
        android:text="hint that is displayed when the option is selected"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:id="@+id/vhr_option_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/vhr_option_text"
        android:layout_alignBottom="@+id/vhr_option_text"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
