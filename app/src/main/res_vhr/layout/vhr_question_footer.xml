<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/divider"
        layout="@layout/horizontal_rule"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="@dimen/vhr_question_text_side_margins" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vhr_question_explanation_margin_to_divider"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vhr_question_footer_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vhr_question_explanation_margin_to_divider"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/vhr_question_text_side_margins"
            android:layout_weight="1"
            android:text="explanation of question (aka footer)"
            android:textAppearance="@style/MaterialLightCaption"
            android:textColor="@color/light_disabled_38"
            android:ellipsize="end"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/expand_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />
    </LinearLayout>

</LinearLayout>
