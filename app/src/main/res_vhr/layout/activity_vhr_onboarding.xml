<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_know_your_health"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/get_started_button"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/onboarding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="32dp"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:textSize="@dimen/onboarding_title_text_size"
            android:textStyle="bold"
            tools:text="Onboarding title goes here" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_active_rewards_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/onboarding_text_margin_bottom">

            <GridLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="6">

                <ImageView
                    android:id="@+id/onboarding_section1_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_column="0"
                    android:layout_marginEnd="32dp"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:contentDescription="@string/onboarding.section_1_title_126"
                    android:scaleType="fitXY"
                    android:src="@drawable/onboarding_earn_points" />

                <TextView
                    android:id="@+id/onboarding_section1_title"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:textSize="@dimen/onboarding_subheading_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/onboarding_section1_content"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_text_margin_bottom"
                    android:textAppearance="@style/MaterialDarkBody1"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/onboarding_subtitle_text_size" />

                <ImageView
                    android:id="@+id/onboarding_section2_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_column="0"
                    android:layout_marginEnd="32dp"
                    android:layout_row="2"
                    android:layout_rowSpan="2"
                    android:contentDescription="@string/onboarding.section_2_title_128"
                    android:scaleType="fitXY"
                    android:src="@drawable/vit_age" />

                <TextView
                    android:id="@+id/onboarding_section2_title"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:textSize="@dimen/onboarding_subheading_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/onboarding_section2_content"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_text_margin_bottom"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:textSize="@dimen/onboarding_subtitle_text_size" />

                <ImageView
                    android:id="@+id/onboarding_section3_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_column="0"
                    android:layout_marginEnd="32dp"
                    android:layout_row="4"
                    android:layout_rowSpan="2"
                    android:contentDescription="@string/vhr_complete_all_sections_icon_content_description"
                    android:scaleType="fitXY"
                    android:src="@drawable/complete_sections" />

                <TextView
                    android:id="@+id/onboarding_section3_title"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="@dimen/onboarding_subheading_text_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:textSize="@dimen/onboarding_subheading_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/onboarding_section3_content"
                    android:layout_width="0dp"
                    android:layout_gravity="fill_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:textSize="@dimen/onboarding_subtitle_text_size" />

            </GridLayout>
        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/get_started_button"
        style="@style/DefaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="76dp"
        android:onClick="onGetStartedTapped"
        android:text="@string/generic_got_it_button_title_131"
        android:theme="@style/OnboardingButton" />

    <Button
        android:id="@+id/vhr_disclaimer_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="4dp"
        android:onClick="onDisclaimerButtonTapped"
        android:text="@string/generic_disclaimer_button_title_265"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        android:textSize="@dimen/onboarding_subtitle_text_size" />

</RelativeLayout>
