<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vhr_get_started"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activerewards.onboarding.CompleteVHROnboardingActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/get_started_horizontal_padding"
        android:paddingRight="@dimen/get_started_horizontal_padding"
        android:paddingStart="@dimen/get_started_horizontal_padding"
        android:paddingEnd="@dimen/get_started_horizontal_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/vhr_120"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/AR.get_started_vhr_title_769"
                android:textAppearance="@style/MaterialLightTitleH2"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/get_started_title_top_margin"
                android:layout_marginBottom="@dimen/get_started_title_bottom_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/MaterialLightBody1"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:text=""/>

            <Button
                android:id="@+id/btn_vhr_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                style="@style/LinkButton"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="@dimen/get_started_button_top_margin"
                android:text="@string/vhr_get_started_button"
                android:onClick="onNextButtonClicked"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>