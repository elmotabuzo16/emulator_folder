<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vhr_cards_margins"
    android:background="@android:color/white"
    app:cardCornerRadius="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <include
            android:id="@+id/vhr_question_header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            layout="@layout/vhr_question_header" />

        <!-- begin unique question middle part -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/vhr_question_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/vhr_question_header"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
        <!-- end unique question middle part -->

        <include
            android:id="@+id/vhr_question_pre_population_details"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/vhr_question_list"
            layout="@layout/vhr_question_pre_population_details" />

        <include
            android:id="@+id/vhr_question_footer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/vhr_question_pre_population_details"
            layout="@layout/vhr_question_footer" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
