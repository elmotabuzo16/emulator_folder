<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/vhr_cards_margins"
    android:background="@android:color/white"
    app:cardCornerRadius="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp">

        <include
            android:id="@+id/vhr_question_header"
            layout="@layout/vhr_question_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <!-- begin unique question middle part -->
        <CheckBox
            android:id="@+id/vhr_question_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/vhr_question_text_side_margins"
            android:layout_marginTop="@dimen/vhr_question_checkbox_top_margin"
            android:clickable="false" />
        <!-- end unique question middle part -->

        <include
            android:id="@+id/vhr_question_pre_population_details"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/vhr_question_header"
            layout="@layout/vhr_question_pre_population_details" />

        <include
            android:id="@+id/vhr_question_footer"
            layout="@layout/vhr_question_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vhr_question_pre_population_details" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
