<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_preferences_security"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vitalityactive.va.userpreferences.SecurityPreferencesActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/preference_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="24dp"
        android:text="@string/events_category_login"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textColor="@color/vhc_measurement_item_gray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/SilverLight"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        />
    <TextView
        android:id="@+id/change_password_header_title_sli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="@string/Settings.change_password_1_title_995"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/vhc_measurement_item_gray"/>
    <LinearLayout
        android:id="@+id/security_change_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_touch_target_size"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="handleChangePasswordTapped"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/preference_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/userpreferences_item_icon_content_description"
            android:src="@drawable/settings_security" />

        <TextView
            android:id="@+id/preference_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:text="@string/Settings.security_change_password_title_827"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    </LinearLayout>

</LinearLayout>
